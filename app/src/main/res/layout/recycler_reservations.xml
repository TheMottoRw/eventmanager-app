<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/recyclerview"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/singleEventHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reservationId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/reserverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="Reserved by: Nelson"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/reserverPhone"
                android:layout_width="wrap_content"
                android:maxWidth="100dp"
                android:layout_height="wrap_content"
                android:text="Phone :087000000"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="10sp"
                android:paddingLeft="0dp"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/reserverName"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/singleEventHolder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text=""
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/eventStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text=""
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/eventEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:paddingLeft="0dp"
            android:layout_marginLeft="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/eventReservedOn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="11sp"/>
    </LinearLayout>
</LinearLayout>