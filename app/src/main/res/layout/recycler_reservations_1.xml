<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shadow"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/singleEventHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/reservationId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/reservationUserIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="10sp"
                android:background="@drawable/ic_baseline_account_box_24"
                android:layout_marginTop="7dp"
                />

            <TextView
                android:id="@+id/reserverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/reservationUserIcon"
                android:text="Reserved by: Nelson"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/reserverPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone :087000000"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="12sp"
                android:paddingLeft="0dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/reserverName"
                android:layout_toRightOf="@id/reservationUserIcon"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:layout_alignBottom="@+id/reservationUserIcon"
            android:background="@drawable/line"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/reservationEventIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:textSize="10sp"
                android:background="@drawable/ic_baseline_event_available_24"
                android:layout_marginTop="7dp"/>
            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text=""
                android:textSize="12sp"
                android:layout_toRightOf="@id/reservationEventIcon"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/eventStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text=""
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/reservationEventIcon"
                android:layout_below="@id/eventName"
                android:layout_marginLeft="5dp"
                android:background="@drawable/highlight"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/singleEventHolder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End:  2021-09-11 12:00"
            android:textSize="10sp"
            android:paddingLeft="0dp"
            android:layout_marginLeft="0dp"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/eventReservedOn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Reserved on:"
        android:textSize="11sp"
        android:textStyle="italic"
        android:gravity="left"
        android:layout_marginLeft="10dp"/>
</LinearLayout>