<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shadow"
    android:padding="12dp"
    android:layout_margin="3dp">


    <LinearLayout
        android:id="@+id/singleBusinessHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/businessId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/companyInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/businessIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_baseline_business_24" />

                <TextView
                    android:id="@+id/businessName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/businessIcon"
                    android:text="KayKen"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnFollow"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:background="@drawable/buttons"
                    android:text="Follow"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:textSize="10sp"
                    android:layout_alignParentRight="true"
                    android:drawableStart="@drawable/ic_baseline_add_circle_outline_24"
                    android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/businessType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/businessName"
                android:layout_toRightOf="@+id/businessIcon"/>
            </RelativeLayout>
            <TextView
                android:layout_width="200dp"
                android:layout_height="3dp"
                android:background="@drawable/line"
                android:layout_below="@+id/companyInfo"
                />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/singleEventHolder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/businessTin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="TIN: 0001"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/businessContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0784634118"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="14sp"
                android:paddingLeft="7dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/businessTin"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/businessAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</LinearLayout>