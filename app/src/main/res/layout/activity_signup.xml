<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.standard.Signup"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:background="#FFC107"
                android:textColor="@color/white"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo"
                android:contentDescription="@string/app_name"
                />
            <LinearLayout
                android:id="@+id/lnyLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/imgLogo">

                <TextView
                    android:id="@+id/tvheade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_account"
                    style="@style/header"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/names"
                    style="@style/label"/>
                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/inputtext"
                    android:drawableStart="@drawable/ic_baseline_text_format_24"
                    />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    style="@style/label"/>
                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    style="@style/inputtext"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    />
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"
                    android:inputType="phone"
                    style="@style/label"/>
                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/inputtext"
                    android:drawableStart="@drawable/ic_baseline_local_phone_24"
                    />
                <TextView
                    android:id="@+id/tvPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    style="@style/label"/>
                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    style="@style/inputtext"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    />

                <TextView
                    android:id="@+id/tvConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_password"
                    style="@style/label"/>
                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    style="@style/inputtext"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    />
                <Button
                    android:id="@+id/btnSignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_account"
                    style="@style/buttons"
                    android:paddingRight="15dp"
                    android:drawableEnd="@drawable/ic_baseline_open_in_new_24"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnyHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/lnyLogin"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tvHost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SERVER ADDRESS"
                    style="@style/label"/>
                <EditText
                    android:id="@+id/edtHost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/inputtext"
                    />
                <Button
                    android:id="@+id/btnSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SET"
                    style="@style/buttons"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnViewAllocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View your allocation"
        style="@style/buttons"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
</RelativeLayout>